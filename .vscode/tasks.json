    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    "args": [],
    "tasks": [{
            "taskName": "build",
            "args": [
                "src/ObjectIdentifier/project.json",
                "test/ObjectIdentifier.Test/project.json"
            ],
            "isBuildCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "test",
            "args": ["test/ObjectIdentifier.Test/project.json"],
            "isTestCommand": true,
            "showOutput": "always",
            "problemMatcher": "$msCompile"
        }
    ]
}